{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "baseUrl": "src",
    "lib": ["es2018", "DOM"],
    "typeRoots": ["/node_modules/@types", "@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}